@import 'nib'

body
  font-family sans-serif
  font-size 16px

.flex-container
  background #ccc
  border 3px solid black
  border-radius .5em
  // Flex stuff
  display flex
  flex-direction column
  .flex-item
    background peru
    border .1875rem solid tomato
    border-radius .3125rem
    color white
    font-size 1.25rem
    height 1.25rem
    line-height 1.25rem
    text-align center
    // Flex stuff
    &:nth-child(3)
      height 4rem
      line-height 4rem
      order -1
  @media screen and (min-width 500px)
    flex-flow row wrap
    justify-content center
    .flex-item
      margin 1rem .5rem
      width 10rem
      &:nth-child(3)
        margin 0
        width 100%
  @media screen and (min-width 850px)
    flex-flow row wrap
    justify-content space-between
    .flex-item
      height 4rem
      line-height 4rem
      //flex 1 2 0
      margin 0
      &:last-child
        line-height initial
      &:nth-child(3)
        height 10rem
        line-height 10rem
        //flex 3 1 0
        order 0

